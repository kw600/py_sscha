#SBATCH --nodes=4
#SBATCH --tasks-per-node=128
#SBATCH --cpus-per-task=1
#SBATCH --job-name=s1
#SBATCH --account=e89-ic_m
#SBATCH --partition=standard
#SBATCH --qos=taskfarm
#SBATCH --time=01:0:0
module load quantum_espresso
I=$1
index=$((I*32))
for nodeid in $nodelist
do
	for i in $(seq 1 8)
	do
		srun --nodes=1 --ntasks=16 --ntasks-per-node=16 --cpus-per-task=8 --exact --mem=10240M  pw.x < espresso_run_${index}.pwi > espresso_run_${index}.pwo
		index=$((index-1))
	done
done

wait